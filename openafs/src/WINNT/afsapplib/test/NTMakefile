$(EXEFILE) : $(EXEOBJS) $(EXELIBS)
	$(EXEGUILINK) comctl32.lib shell32.lib
        $(_VC_MANIFEST_EMBED_EXE)
	$(EXEPREP)
        $(CODESIGN_USERLAND)
        $(SYMSTORE_IMPORT)

